{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_source_df_emp",
						"type": "DatasetReference"
					},
					"name": "employeenew"
				},
				{
					"dataset": {
						"referenceName": "ds_source_df_dept",
						"type": "DatasetReference"
					},
					"name": "deparment"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "join1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as integer,",
				"          E_NAME as string,",
				"          E_ADDRESS as string,",
				"          E_MULTI_STATES as string,",
				"          PANNUMBER as integer,",
				"          BANKACCOUNTNUMBER as long,",
				"          DOJ as date,",
				"          SALARY as decimal(10,2)",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     enableCdc: true,",
				"     mode: 'read',",
				"     skipInitialLoad: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table',",
				"     partitionBy('hash', 1)) ~> employeenew",
				"source(output(",
				"          DEPT_ID as integer,",
				"          DEPT_NAME as string,",
				"          MANAGER_ID as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> deparment",
				"employeenew, deparment join(ID == MANAGER_ID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1"
			]
		}
	}
}